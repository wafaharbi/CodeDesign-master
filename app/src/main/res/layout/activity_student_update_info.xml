<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/col"
    tools:context=".StudentUpdateInfo">


    <EditText
        android:id="@+id/updateName"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/updateName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Enter new Name"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/updateEmail"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/updateName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="Enter new Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/updatePhone"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/updateName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="Enter new Phone"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="207dp"
        android:layout_marginBottom="127dp"
        android:background="@color/red"
        android:onClick="update"
        android:text="Update"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="127dp"
        android:background="@color/red"
        android:onClick="delete"
        android:text="Delete"
        android:textColor="@color/White" />
    <!-- <Button
         android:id="@+id/btnDelete"
         android:layout_width="112dp"
         android:layout_height="48dp"
         android:layout_alignParentStart="true"
         android:layout_alignParentBottom="true"
         android:layout_marginStart="76dp"
         android:layout_marginBottom="87dp"
         android:background="@color/red"

         android:onClick="delete"
         android:textColor="@color/White"
         tools:text="delete" />-->

    <TextView
        android:id="@+id/stdID"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="329dp"
        android:layout_marginRight="329dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="328dp"
        android:layout_marginRight="328dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="328dp"
        android:layout_marginRight="328dp"
        android:text="Phone"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>
